---
import {type ImageModel } from '@ts/Models'

interface Props extends ImageModel {};

const {src, alt} = Astro.props;

let photopath = src && '/src/assets/'.concat(src);
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}')
---

<figure class="image tile-image">
    <div class="has-background-danger">
        <Image src={images[photopath]()} alt={alt} />
    </div>
</figure>

<style type="scss">
    img {
        -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
        filter: grayscale(100%);
        mix-blend-mode: screen;
    }
</style>